<div class="container">
  <%= simple_form_for [@travel_line, @bus_travel, @passenger_trip, @passenger] do |f| %>
    <div>
      <%= f.association :travel_line, collection: TravelLine.all.map {|u| u.identification_number}, label: "Linha" %>
      <%= f.association :bus_travel, collection: BusTravel.all.map {|u| u.departure_on}, label: "Data de Saída", input_html: { multiple: true } %>
    </div>
    <div class="form-inputs">
      <%= f.input :full_name, label: "Nome Completo" %>
    </div>
    <div class="form-inputs">
      <%= f.input :date_of_birth, label: "Data de Nascimento" %>
    </div>
    <div class="form-inputs">
      <%= f.input :gender, :collection => ["Feminino", "Masculino", "Não informado"],
                  :input_html => {:class => 'selectpicker'},
                  :label => 'Gênero',
                  prompt: "escolha uma opção" %>
    </div>
    <div class="form-inputs">
      <%= f.input :cpf, label: "CPF" %>
    </div>
    <div class="form-inputs">
      <%= f.input :identification_number, label: "RG" %>
    </div>
    <div class="form-inputs">
      <%= f.input :identification_state, label: "UF" %>
    </div>
    <div>
      <%= f.fields_for :passenger_trips do |trip_form| %>
        <%= trip_form.input :seat, label: "Poltrona"%>
        <%= trip_form.input :arrival_spot, label: "Local de Desembarque" %>
      <% end %>
    </div>

    <div class="form-actions text-right">
       <%= f.button :submit, value: "Salvar", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
