<div class="container">
  <h4 class="mt-3 ml-1"> Cadastrar Alerta</h4>
  <div class="card text-primary shadow-sm pb-3 bg-white rounded">
    <div class="card-body">
      <%= simple_form_for [ @passenger, @alert ] do |f| %>
        <%= f.input :felony, :collection => ["Contrabando",
                                            "Descaminho",
                                            "Crime Ambiental",
                                            "Tráfico de Drogas",
                                            "Tráfico de Armas",
                                            "Tráfico de Pessoas",
                                            "Outros"],
                    :input_html => {:class => 'selectpicker'},
                    :label => 'Natureza',
                    prompt: "Escolha uma opção" %>
        <%= f.input :description, label: "Descrição" %>
        <p><strong>Nível de Prioridade</strong></p>
        <%= f.input :level, as: :radio_buttons, collection: [['yellow', 'Médio'] ,['red', 'Alto']], label_method: :second, value_method: :first, wrapper: :horizontal_collection_inline, label: false %>
        <div class="text-right">
          <%= f.button :submit, value: "Salvar", :class => "btn btn-primary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
