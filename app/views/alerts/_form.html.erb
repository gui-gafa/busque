<div class="container">
  <h4 class="mt-3 ml-1 text-center"> Cadastrar Alerta</h4>
  <div class="card text-primary shadow-sm bg-white rounded" style="width: 30vw; margin: 0 auto; height: 500px">
    <div class="card-body">
      <%= simple_form_for [ @passenger, @alert ] do |f| %>
        <div class="mb-5">
          <%= f.input :felony, :collection => ["Contrabando",
                                              "Descaminho",
                                              "Crime Ambiental",
                                              "Tráfico de Drogas",
                                              "Tráfico de Armas",
                                              "Tráfico de Pessoas",
                                              "Outros"],
                      :input_html => {:class => 'selectpicker'},
                      :label => 'Natureza',
                      prompt: "Escolha uma opção" %>
        </div>
        <div class="mb-5">
          <%= f.input :description, label: "Descrição", input_html: {style: "border-color: #333; height: 150px"} %>
        </div>
        <div class="mb-5">
          <p><strong>Nível de Prioridade</strong></p>
          <%= f.input :level, as: :radio_buttons, collection: [['yellow', 'Médio'] ,['red', 'Alto']], label_method: :second, value_method: :first, wrapper: :horizontal_collection_inline, label: false %>
        </div>
        <div class="form-actions mt-2" style="display: flex; justify-content: space-between;">
          <%= link_to 'Voltar', 'javascript:history.go(-1);', :class => "btn btn-primary btn-sm" %>
          <%= f.button :submit, value: "Salvar", :class => "btn btn-primary btn-sm" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
