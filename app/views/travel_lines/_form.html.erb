<div class="container">
  <h4 class="mt-3 ml-1 mb-3 titulo-page"> Cadastrar Linhas de Ã”nibus</h4>
  <div class="card text-primary shadow-sm bg-white rounded" style="width:50%">
    <div class="card-body">
      <%= simple_form_for [@company, @travel_line] do |f| %>
        <div class="form-inputs">
          <%= f.association :company, label: "Empresa", collection: Company.all, label_method: :company_name, input_html: {style: "width: 300px"} %>
        </div>
        <div class="form-inputs">
          <%= f.input :identification_number, label: "Linha", input_html: {style: "width: 100px"} %>
        </div>
        <div class="form-inputs">
          <%= f.input :origin, label: "Origem", input_html: {style: "width: 300px"} %>
        </div>
        <div class="form-inputs">
          <%= f.input :destination, label: "Destino", input_html: {style: "width: 300px"} %>
        </div>
        <div class="form-inputs">
          <%= f.input :departure_at, label: "Hora de Partida", input_html: {style: "width: 100px"} %>
        </div>
        <div class="form-inputs">
          <%= f.input :arrival_at, label: "Hora de Chegada", input_html: {style: "width: 100px"} %>
        </div>
        <div class="form-actions text-right">
          <%= f.button :submit, value: "Salvar", :class => "btn btn-primary" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>
